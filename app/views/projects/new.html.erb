<div class="max-w-md mx-auto bg-white p-8 shadow-md rounded-lg mt-32">
  <h1 class="text-3xl font-bold mb-6 text-center">New Project</h1>
  <%= form_with(model: @project, url: projects_path, html: { data:{turbo: false} }) do |form| %>
    <div class="mb-6">
      <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "form-input w-full py-2 px-4 border rounded-lg focus:outline-none focus:ring focus:border-blue-300", required: true %>
    </div>
    <div class="mb-6">
      <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :description, class: "form-textarea w-full py-2 px-4 border rounded-lg focus:outline-none focus:ring focus:border-blue-300", required: true %>
    </div>
    <div class="mb-6">
      <%= form.label :image, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.file_field :image, class: "form-input w-full py-2 px-4 border rounded-lg focus:outline-none focus:ring focus:border-blue-300", required: true %>
    </div>
    <div class="flex justify-end">
      <%= form.submit "Submit", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring focus:border-blue-300" %>
    </div>
  <% end %>
</div>
